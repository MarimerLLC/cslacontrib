  <connectionStrings>
    <add name="PTracker" 
			 connectionString="Server=.;Database=ProjectTracker;User ID=rdz;Password=rdz;"
			 providerName="System.Data.SqlClient" />
    <add name="Security" 
			 connectionString="Server=.;Database=Security;User ID=rdz;Password=rdz;"
			 providerName="System.Data.SqlClient" />
  </connectionStrings>
</configuration>